<Application x:Class="NsisoLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NsisoLauncher"
             Startup="Application_Startup"
             Exit="Application_Exit" ShutdownMode="OnMainWindowClose"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive! -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <!-- Theme setting -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml" />
                <!-- Fonts -->
                <ResourceDictionary Source="Themes/Base/Fonts.xaml"/>
                <!-- Language -->
                <ResourceDictionary Source="pack://application:,,,/Resource/Language/zh_CN.xaml"/>
                
                <!-- Local -->
                <ResourceDictionary Source="Resource/Style/VersionComboboxStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
